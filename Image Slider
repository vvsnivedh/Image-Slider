        <!-- Navigation Buttons -->
        <button class="nav-button prev" onclick="prevSlide()">&#10094;</button>
        <button class="nav-button next" onclick="nextSlide()">&#10095;</button>
    </div>

    <script>
        let currentIndex = 0;
        const totalSlides = 8;
        const sliderWrapper = document.getElementById('sliderWrapper');

        // Function to go to the previous slide
        function prevSlide() {
            currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
            updateSlider();
        }

        // Function to go to the next slide
        function nextSlide() {
            currentIndex = (currentIndex + 1) % totalSlides;
            updateSlider();
        }

        // Function to update the slider position with rotation effect
        function updateSlider() {
            const angle = currentIndex * -45; // Each slide rotates by 45 degrees
            sliderWrapper.style.transform = `rotateY(${angle}deg)`;
        }
    </script>
